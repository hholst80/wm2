# wm2 configuration
# Place this file at ~/.config/wm2/config.toml

# Terminal emulator command
terminal = "foot"

# Application launcher command
launcher = "fuzzel"

# Wallpaper image path (PNG or JPEG). Empty or omitted = no wallpaper.
# wallpaper = "~/.config/river/bg.png"

# Border width in pixels (0 to disable borders)
border_width = 2

# Default layout mode for new desktops
# Options: "fullscreen", "max", "split"
default_layout = "max"

# XKB keyboard configuration
# Applied at runtime via river-xkb-config-v1 protocol.
# Equivalent to: riverctl keyboard-layout -model pc105 -variant altgr-intl \
#                  -options ctrl:nocaps,compose:rctrl us
[xkb]
layout = "us"
model = "pc105"
variant = "altgr-intl"
options = "ctrl:nocaps,compose:rctrl"

# Managed processes â€” started after protocol binding, restarted on crash.
# Fields: cmd (required), restart (bool, default true),
#         restart_delay (seconds, default 1.0), restart_max_delay (seconds, default 30.0)
#
# One-shot commands (restart = false) are useful for setup that must run
# after wm2 has bound protocols (e.g. display scaling).
#
# [[process]]
# cmd = "wlr-randr --output eDP-1 --scale 2"
# restart = false
#
# [[process]]
# cmd = "foot --server"
#
# [[process]]
# cmd = "waybar"
#
# [[process]]
# cmd = "swaync"
# restart = false
