# wm2 configuration
# Place this file at ~/.config/wm2/config.toml

# Terminal emulator command
terminal = "foot"

# Application launcher command
launcher = "fuzzel"

# Border width in pixels (0 to disable borders)
border_width = 2

# Default layout mode for new desktops
# Options: "fullscreen", "max", "split"
default_layout = "max"

# XKB keyboard configuration
# Applied at runtime via river-xkb-config-v1 protocol.
# Equivalent to: riverctl keyboard-layout -model pc105 -variant altgr-intl \
#                  -options ctrl:nocaps,compose:rctrl us
[xkb]
layout = "us"
model = "pc105"
variant = "altgr-intl"
options = "ctrl:nocaps,compose:rctrl"
