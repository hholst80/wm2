# river-wm configuration
# Place this file at ~/.config/river-wm/config.toml

# Terminal emulator command
terminal = "foot"

# Application launcher command
launcher = "fuzzel"

# Border width in pixels (0 to disable borders)
border_width = 2

# Default layout mode for new desktops
# Options: "fullscreen", "max", "split"
default_layout = "max"

# XKB keyboard layout (e.g. "us", "se", "de")
# Applied at runtime via river-xkb-config-v1 protocol.
# xkb_layout = "us"

# XKB options (e.g. "ctrl:nocaps" to map CapsLock as Ctrl)
# Applied at runtime via river-xkb-config-v1 protocol.
# See xkeyboard-config(7) for all available options.
xkb_options = "ctrl:nocaps"
