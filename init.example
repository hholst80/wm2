#!/bin/sh
#
# Example River init script for use with wm2.
# Place this file at ~/.config/river/init and make it executable:
#   chmod +x ~/.config/river/init
#
# All processes (status bar, notification daemon, display scaling, portals)
# are configured as managed processes in ~/.config/wm2/config.toml.

# Path to the wm2 installation
WM2_DIR="${WM2_DIR:-$HOME/wm2}"

exec python3 "$WM2_DIR/wm2.py"
