#!/bin/sh
#
# Example River init script for use with wm2.
# Place this file at ~/.config/river/init and make it executable:
#   chmod +x ~/.config/river/init
#

# Path to the wm2 installation
WM2_DIR="${WM2_DIR:-$HOME/wm2}"

# Set environment variables for child processes
export XCURSOR_THEME="Adwaita"
export XCURSOR_SIZE=24

# Start the window manager
python3 "$WM2_DIR/wm2.py" &

# Optional: start a status bar (e.g., waybar)
# waybar &

# Optional: set a wallpaper
# swaybg -i "$HOME/wallpaper.png" -m fill &

# Optional: start a notification daemon
# mako &

# Optional: start an idle manager
# swayidle -w \
#     timeout 300 'swaylock -f -c 000000' \
#     timeout 600 'wlopm --off \*' \
#     resume 'wlopm --on \*' &
